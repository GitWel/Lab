#include "pch.h"
#include <iostream>
#include <string>
using namespace std;

class Child {
private:
	string firstname;    
	string name;          
	int age;
public:
	void in() {
		cin >> firstname >> name >> age;
	}
	void out() {
		cout << firstname << "-Имя   " << name << "-Фамилия   " << age << endl;
	}
};

int main()
{
	setlocale(LC_ALL, "Russian");
	Child ch1, ch2;
	ch1.in();
	ch2.in();
	ch1.out();
	ch2.out();
	return 0;
	system("pause");
}
